<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfissionalObs">

    <ImageView
        android:id="@+id/image_profissional"
        android:layout_width="172dp"
        android:layout_height="163dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/campo_nome"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="84dp"
        android:layout_marginHorizontal="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_profissional" />


    <TextView
        android:id="@+id/campo_valor_produto"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="64dp"
        android:layout_marginHorizontal="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/campo_nome"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/campo_nome"
        app:layout_constraintTop_toBottomOf="@+id/campo_nome" />


    <TextView
        android:id="@+id/campo_descricao"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="72dp"
        android:layout_marginHorizontal="12dp"
        android:text="TextView"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campo_valor_produto"
        app:layout_constraintVertical_bias="0.11" />




</androidx.constraintlayout.widget.ConstraintLayout>